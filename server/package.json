{
  "name": "eosrate-server",
  "version": "0.1.0",
  "license": "MIT",
  "author": "eoscostarica.io",
  "main": "src/index.js",
  "engines": {
    "node": "10",
    "npm": ">=5.3.0",
    "yarn": ">=0.27.5"
  },
  "scripts": {
    "start": "nodemon src/index.js",
    "prod": "node src/index.js",
    "precommit": "pretty-quick --staged && lint-staged",
    "lint": "pretty-quick . && standard --fix src | snazzy",
    "docker:dev": "nodemon --delay 80ms --watch ./ src/index.js --exec 'npm run inspect'",
    "inspect": "kill-port --port 9239 && node --inspect=0.0.0.0:9239 src/index.js",
    "now": "now --public --npm && now alias"
  },
  "lint-staged": {
    "src/**/*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@eoscostarica/eosjs-camel-api": "^0.2.0",
    "fastify": "^1.11.2",
    "fastify-graphql": "^4.0.1",
    "graphql": "^14.0.2",
    "human-to-cron": "^0.3.1",
    "mongoose": "^5.2.14",
    "node-schedule": "^1.3.0",
    "nodemon": "^1.18.4",
    "standard": "^12.0.1"
  },
  "devDependencies": {
    "kill-port": "^1.3.2",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "snazzy": "^8.0.0"
  }
}
